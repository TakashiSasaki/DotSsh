#
# OpenSSL example configuration file.
# This is mostly being used for generation of certificate requests.
#

# This definition stops the following lines choking if HOME isn't
# defined.
HOME                    = .
RANDFILE                = $ENV::HOME/.rnd

####################################################################
[ req ]
default_bits            = 2048
default_keyfile         = privkey.pem
distinguished_name      = req_distinguished_name
attributes              = req_attributes
x509_extensions         = v3_ca         
string_mask             = utf8only
req_extensions          = v3_req 

[ req_distinguished_name ]
countryName                     = Country Name (2 letter code)
countryName_default             = JP
countryName_min                 = 2
countryName_max                 = 2

stateOrProvinceName             = State or Province Name (full name)
stateOrProvinceName_default     = Ehime

localityName                    = Locality Name (eg, city)
localityName_default            = Matsuyama

0.organizationName              = Organization Name (eg, company)
0.organizationName_default      = Personal Use

1.organizationName              = Second Organization Name (eg, company)
1.organizationName_default      = TakashiSasaki

0.organizationalUnitName          = Organizational Unit Name (eg, section)
0.organizationalUnitName_default  = TakashiSasaki CA
1.organizationalUnitName          = Second Organizational Unit Name (eg, subsection)
1.organizationalUnitName_default  = 
2.organizationalUnitName          = Third Organizational Unit Name (eg, subsubsection)
2.organizationalUnitName_default  = 

commonName                      = Common Name (e.g. server FQDN or YOUR name)
commonName_max                  = 64
commonName_default              = Takashi SASAKI Certification Authority

emailAddress                    = Email Address
emailAddress_max                = 64
emailAddress_default            = takashi316+ca@gmail.com

[ req_attributes ]

[ v3_req ]
basicConstraints        = CA:true
keyUsage                = nonRepudiation,digitalSignature,keyEncipherment,dataEncipherment
subjectAltName          = email:move    
issuerAltName           = email:copy

[ v3_ca ]
subjectKeyIdentifier    = hash
authorityKeyIdentifier  = keyid:always, issuer
basicConstraints        = CA:true
keyUsage                = cRLSign, keyCertSign
subjectAltName          = email:move
issuerAltName           = issuer:copy

